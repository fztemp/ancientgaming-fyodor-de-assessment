[flake8]
#format = wemake
show-source = true

max-line-length = 90
docstring-style = numpy

# ignore these error codes
ignore =
    WPS114,
    WPS202,
    WPS210,
    WPS226

[isort]
profile = wemake
known_third_party = airflow
force_alphabetical_sort_within_sections = true
force_sort_within_sections = true
lines_between_sections = 1

[darglint]
docstring_style = numpy
strictness = short